<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/follower_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/recyclerview_item_padding">

    <ImageView
        android:id="@+id/item_image"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:transitionName="@string/avatar_transition"
        style="@style/ListImageStyle"/>

    <TextView
        android:id="@+id/name_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/item_image"
        android:layout_centerHorizontal="true"
        android:transitionName="@string/label_transition"
        style="@style/ListTextStyle"/>


</RelativeLayout>